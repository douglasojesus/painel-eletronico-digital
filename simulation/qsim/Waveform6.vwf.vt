`timescale 1 ps/ 1 ps
module Letreiro_vlg_sample_tst(
	CLK,
	Ch0,
	Ch1,
	D,
	set,
	sampler_tx
);
input  CLK;
input  Ch0;
input  Ch1;
input  D;
input  set;
output sampler_tx;

reg sample;
time current_time;
always @(CLK or Ch0 or Ch1 or D or set)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

module Letreiro_vlg_check_tst (
	D,
	X,
	sampler_rx
);
input  D;
input  X;
input sampler_rx;

reg  D_expected;
reg  X_expected;

reg  D_prev;
reg  X_prev;

reg  D_expected_prev;
reg  X_expected_prev;

reg  last_D_exp;
reg  last_X_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:2] on_first_change ;


initial
begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 2'b1;
end

// update real /o prevs

always @(trigger)
begin
	D_prev = D;
	X_prev = X;
end

// update expected /o prevs

always @(trigger)
begin
	D_expected_prev = D_expected;
	X_expected_prev = X_expected;
end



// expected X
initial
begin
	X_expected = 1'bX;
end 
// generate trigger
always @(D_expected or D or X_expected or X)
begin
	trigger <= ~trigger;
end

always @(posedge sampler_rx or negedge sampler_rx)
begin
`ifdef debug_tbench
	$display("Scanning pattern %d @time = %t",i,$realtime );
	i = i + 1;
	$display("| expected D = %b | expected X = %b | ",D_expected_prev,X_expected_prev);
	$display("| real D = %b | real X = %b | ",D_prev,X_prev);
`endif
	if (
		( D_expected_prev !== 1'bx ) && ( D_prev !== D_expected_prev )
		&& ((D_expected_prev !== last_D_exp) ||
			on_first_change[1])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port D :: @time = %t",  $realtime);
		$display ("     Expected value = %b", D_expected_prev);
		$display ("     Real value = %b", D_prev);
		nummismatches = nummismatches + 1;
		on_first_change[1] = 1'b0;
		last_D_exp = D_expected_prev;
	end
	if (
		( X_expected_prev !== 1'bx ) && ( X_prev !== X_expected_prev )
		&& ((X_expected_prev !== last_X_exp) ||
			on_first_change[2])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port X :: @time = %t",  $realtime);
		$display ("     Expected value = %b", X_expected_prev);
		$display ("     Real value = %b", X_prev);
		nummismatches = nummismatches + 1;
		on_first_change[2] = 1'b0;
		last_X_exp = X_expected_prev;
	end

	trigger <= ~trigger;
end
initial 

begin 
$timeformat(-12,3," ps",6);
#80000;
if (nummismatches > 0)
	$display ("%d mismatched vectors : Simulation failed !",nummismatches);
else
	$display ("Simulation passed !");
$finish;
end 
endmodule

module Letreiro_vlg_vec_tst();
// constants                                           
// general purpose registers
reg CLK;
reg Ch0;
reg Ch1;
reg treg_D;
reg set;
// wires                                               
wire D;
wire X;

wire sampler;                             

// assign statements (if any)                          
assign D = treg_D;
Letreiro i1 (
// port map - connection between master ports and signals/registers   
	.CLK(CLK),
	.Ch0(Ch0),
	.Ch1(Ch1),
	.D(D),
	.X(X),
	.set(set)
);

// CLK
always
begin
	CLK = 1'b0;
	CLK = #5000 1'b1;
	#5000;
end 

// D
always
begin
	treg_D = 1'b0;
	treg_D = #10000 1'b1;
	#10000;
end 

// set
always
begin
	set = 1'b0;
	set = #20000 1'b1;
	#20000;
end 

Letreiro_vlg_sample_tst tb_sample (
	.CLK(CLK),
	.Ch0(Ch0),
	.Ch1(Ch1),
	.D(D),
	.set(set),
	.sampler_tx(sampler)
);

Letreiro_vlg_check_tst tb_out(
	.D(D),
	.X(X),
	.sampler_rx(sampler)
);
endmodule

